@using System.Globalization
@model IDictionary<string,MyWeatherForecast.ViewModels.IWeatherForecast>

<div id="WeatherForecast">
    @if (@Model.Count != 0)
    {
        <h2>@ViewData["city"]</h2>
        var date1 = DateTime.Now.ToString(CultureInfo.InvariantCulture);
        <h5>@date1</h5>

        foreach (var weather in @Model)
        {
            <h5>Информация о погоде по данным сервиса @weather.Key</h5>
            <table>
                <tr>
                    <td class="tableheader"></td>
                    <td class="tableheader">Температура C</td>
                    <td class="tableheader">Давление, мм</td>
                    <td class="tableheader">Влажность, %</td>
                    <td class="tableheader">Скорость ветра, м/s</td>
                </tr>
                <tr>
                    <td><img src=@weather.Value.ImageUrl></td>
                    <td>@weather.Value.Temperature</td>
                    <td>@weather.Value.Pressure</td>
                    <td>@weather.Value.Humidity</td>
                    <td>@weather.Value.WindSpeed</td>
                </tr>
            </table>
        }
    }
    else
    {
        <h5>Не найдена информация по городу '@ViewData["city"]'</h5>
    }
</div>
